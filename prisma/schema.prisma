// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  password    String
  credentials credentials[]
  notes       notes[]
  cards       cards[]
  createdAt   DateTime    @default(now())
}

model credentials {
  id        Int           @id @default(autoincrement())
  user      users         @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  url       String
  username  String
  password  String
  createdAt DateTime      @default(now())

  @@unique([userId, title])
}

model notes {
  id          Int       @id @default(autoincrement())
  title       String    @db.Char(50)
  user        users     @relation(fields: [userId], references: [id])
  userId      Int
  annotation  String    @db.Char(1000)
  createdAt   DateTime  @default(now())

  @@unique([userId, title])
}

model cards {
  id              Int       @id @default(autoincrement())
  user            users     @relation(fields: [userId], references: [id])
  userId          Int
  title           String
  number          BigInt
  name            String
  securityCode    Int
  expirationDate  DateTime
  password        String
  isVirtual       Boolean
  type            cardType
  createdAt       DateTime  @default(now())

  @@unique([userId, title])
}

enum cardType {
  credit
  debit
  both
}